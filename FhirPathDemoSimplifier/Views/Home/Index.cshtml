<div class="main-menu row">
    <div class="container">
        <div class="col-xs-10">
            <div class="h3">
                | FHIRpath
                small  fhir path implementation in js
            </div>
        </div>
        <div>
            <div class="h3">
                <a href="https://github.com/jmandel/fhirpath.js">src/</a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <br />
    Examples: &nbsp;
    <span ng-repeat="(k,ex in examples)">
        <a ng-click="selectExamples(ex)">
            {{ex.name}}
        </a>
        &nbsp;
    </span>
</div>
<div class="container">
    <br />
    <div class="row">
        <div class="col-xs-8">
            <input class="form-control" placeholder="fhir path" ng-model="path" ng-change="update()" />
            <br />
            <div class="alert alert-danger" ng-if="errors">
                <ul ng-repeat="er in errors">
                    <li> {{er[4]}}</li>
                </ul>
            </div>
            <div class="alert alert-danger" ng-if="error">
                {{error}}
            </div>
        </div>
        <div class="col-xs-3">
            <input class="form-control" placeholder="Save as" ng-model="exampleName" />
        </div>
        <div class="col-xs-1">
            <button class="btn btn-success" ng-click="saveExample()">
                Save
            </button>
        </div>
    </div>
    <div>
        <div class="col-xs-8">
            <textarea class="fh form-control" ng-model="resource" ng-change="update()"></textarea>
            <br />
            <div class="alert alert-danger" ng-if="parseError">
                {{parseError}}
            </div>
        </div>
        <div class="col-xs-4">
            <textarea class="fh form-control" ng-model="result"></textarea>
        </div>
    </div>
</div>